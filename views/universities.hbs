<h2>Manage Universities</h2>

<fieldset>
    <legend>Existing Universities</legend>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Campus Type</th>
                <th>Acceptance Rate</th>
                <th>Athletic Class</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each universities}}
            <tr>
                <td>{{this.universityID}}</td>
                <td>{{this.universityName}}</td>
                <td>{{this.location}}</td>
                <td>{{this.campusType}}</td>
                <td>{{this.acceptanceRate}}</td>
                <td>{{this.athleticClassification}}</td>
                <td>
                    <!-- Update form -->
                    <form method="POST" action="/universities/update" style="display:inline;">
                        <input type="hidden" name="universityID" value="{{this.universityID}}">
                        <input type="text" name="universityName" value="{{this.universityName}}" required>
                        <input type="text" name="location" value="{{this.location}}" required>
                        <select name="campusType" required>
                            <option value="Urban">Urban</option> 
                            <option value="Suburban">Suburban</option>
                            <option value="Rural">Rural</option>
                        </select>
                        <input type="number" step="0.01" name="acceptanceRate" value="{{this.acceptanceRate}}" min="0" max="100" required>
                        <select name="athleticClassification" required>
                            <option value="D1">D1</option>
                            <option value="D2">D2</option>
                            <option value="D3">D3</option>
                            <option value="NAIA"> NAIAS</option>
                        </select>
                        <button type="submit">Update</button>
                    </form>

                    <!-- Delete form -->
                    <form method="POST" action="/universities/remove" style="display:inline;">
                        <input type="hidden" name="universityID" value="{{this.universityID}}">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</fieldset>
<br>

<fieldset>
    <legend>Add a New University</legend>
    <form id="add_university_form" method="POST" action="/universities/add">
        <label>Name:</label>
        <input type="text" name="universityName" required>
        
        <label>Location (City, ST):</label>
        <input type="text" name="location" required>
        
        <label>Campus Type:</label>
        <select name="campusType" required>
            <option value="Urban">Urban</option>
            <option value="Suburban">Suburban</option>
            <option value="Rural">Rural</option>
        </select>

        <label>Acceptance Rate:</label>
        <input type="number" step="0.01" name="acceptanceRate" min="0" max="100" required>

        <label>Athletic Class:</label>
        <select name="athleticClassification" required>
            <option value="D1">D1</option>
            <option value="D2">D2</option>
            <option value="D3">D3</option>
            <option value="NAIA">NAIA</option>
        </select>
        
        <input type="submit" value="Add University">
    </form>
</fieldset>
