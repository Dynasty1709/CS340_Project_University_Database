<h2>Manage Majors (Master List)</h2>

<fieldset>
    <legend>Existing Majors</legend>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Level</th>
                <th>Program</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each majors}}
            <tr>
                <td>{{this.majorID}}</td>
                <td>{{this.level}}</td>
                <td>{{this.program}}</td>
                <td>
                    <!-- Change major name -->
                    <form method="POST" action="/majors/change" style="display:inline;">
                        <input type="hidden" name="majorID" value="{{this.majorID}}">
                        <input type="text" name="newName" placeholder="New Program Name">
                        <button type="submit">Change</button>
                    </form>

                    <!-- Remove major -->
                    <form method="POST" action="/majors/remove" style="display:inline;">
                        <input type="hidden" name="universityID" value="{{../universityID}}">
                        <input type="hidden" name="majorID" value="{{this.majorID}}">
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</fieldset>
<br>

<fieldset>
    <legend>Add a New Major</legend>
    <form id="add_major_form" method="POST" action="/majors/add">
        <label for="universityID">University:</label>
        <select id="universityID" name="universityID" required>
             <option value="1">Oregon State University</option>
            <option value="2">UCLA</option>
            <option value="3">Washington University in St. Louis</option>
        </select>

        <label for="majorID">Select Major:</label>
        <select id="majorID" name="majorID" required>
             <option value="1">Computer Science</option>
            <option value="2">Business Administration</option>
            <option value="3">Public Health</option>
        </select>

        <input type="submit" value="Add Major">
    </form>
</fieldset>
