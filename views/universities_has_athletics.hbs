<h2>Assign Sports to Universities (M:N)</h2>

<fieldset>
    <legend>Existing Assignments</legend>
    <table border="1">
        <thead>
            <tr>
                <th>University</th>
                <th>Sport</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Oregon State University</td>
                <td>Football (Men)</td>
                <td><button>Delete</button></td>
            </tr>
            <tr>
                <td>Oregon State University</td>
                <td>Basketball (Men)</td>
                <td><button>Delete</button></td>
            </tr>
        </tbody>
    </table>
</fieldset>
<br>

<fieldset>
    <legend>Assign a Sport to a University</legend>
    <form>
        <label>University:</label>
        <select name="universityID">
            <option value="1">Oregon State University</option>
            <option value="2">UCLA</option>
            <option value="3">Washington University in St. Louis</option>
        </select>

        <label>Sport:</label>
        <select name="sportID">
            <option value="1">Football (Men)</option>
            <option value="2">Basketball (Men)</option>
            <option value="3">Basketball (Women)</option>
        </select>
        
        <input type="submit" value="Assign Sport">
    </form>
</fieldset>