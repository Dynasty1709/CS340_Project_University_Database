<h2>Manage University Costs</h2>

<fieldset>
    <legend>Existing Cost Records</legend>
    <table border="1">
        <thead>
            <tr>
                <th>Cost ID</th>
                <th>University</th>
                <th>Fees</th>
                <th>Boarding</th>
                <th>Meals</th>
                <th>Books</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each costs}}
            <tr>
                <form method="POST" action="/costs/update">
                    <input type="hidden" name="costID" value="{{this.costID}}">

                    <td>{{this.costID}}</td>
                    <td>{{this.universityName}}</td>
                    <td>
                        <input type="number" step="0.01" name="fees" value="{{this.fees}}" required>
                    </td>
                    <td>
                        <input type="number" step="0.01" name="boarding" value="{{this.boarding}}" required>
                    </td>
                    <td>
                        <input type="number" step="0.01" name="meals" value="{{this.meals}}" required>
                    </td>
                    <td>
                        <input type="number" step="0.01" name="books" value="{{this.books}}" required>
                    </td>
                    <td>
                        <button type="submit" onclick="return confirm('Are you sure you want to update this record?')">Update</button>
                        <button type="submit" formaction="/costs/remove" onclick="return confirm('Are you sure you want to delete this record?')">Delete</button>
                    </td>
                </form>
            </tr>
            {{/each}}
        </tbody>
    </table>
</fieldset>

<br>

<fieldset>
    <legend>Add a New Cost Record</legend>
    <form id="add_cost_form" method="POST" action="/costs/add">
        <label>University:</label>
        <select name="universityID" required>
            {{#each universities}}
                <option value="{{this.universityID}}">{{this.universityName}}</option>
            {{/each}}
        </select>

        <label>Fees:</label>
        <input type="number" step="0.01" name="fees" min="0" placeholder="2300.00" required>

        <label>Boarding:</label>
        <input type="number" step="0.01" name="boarding" min="0" placeholder="13200.00"required>

        <label>Meals:</label>
        <input type="number" step="0.01" name="meals" min="0" placeholder="6400.00"required>

        <label>Books:</label>
        <input type="number" step="0.01" name="books" min="0" placeholder="1200.00"required>
        
        <input type="submit" value="Add Cost Record">
    </form>
</fieldset>
