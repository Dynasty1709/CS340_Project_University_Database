<h2>Manage Athletics (Master List)</h2>

<fieldset>
    <legend>Existing Sports</legend>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Sport Name</th>
                <th>Sport Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Football (Men)</td>
                <td>Team</td>
                <td><button>Edit</button> <button>Delete</button></td>
            </tr>
            <tr>
                <td>2</td>
                <td>Basketball (Men)</td>
                <td>Team</td>
                <td><button>Edit</button> <button>Delete</button></td>
            </tr>
            <tr>
                <td>3</td>
                <td>Basketball (Women)</td>
                <td>Team</td>
                <td><button>Edit</button> <button>Delete</button></td>
            </tr>
        </tbody>
    </table>
</fieldset>
<br>

<fieldset>
    <legend>Add a New Sport</legend>
    <form>
        <label>Sport Name:</label>
        <input type="text" name="sportName">
        
        <label>Sport Type:</label>
        <input type="text" name="sportType" placeholder="e.g. Team or Individual">
        
        <input type="submit" value="Add Sport">
    </form>
</fieldset>