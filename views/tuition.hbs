<h2>Manage University Tuition</h2>

<fieldset>
    <legend>Existing Tuition Records</legend>
    <table border="1">
        <thead>
            <tr>
                <th>Tuition ID</th>
                <th>For Cost Record (University)</th>
                <th>In-State Tuition</th>
                <th>Out-of-State Tuition</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each tuition}}
            <tr>
                <td>{{this.tuitionID}}</td>
                <td>{{this.costID}} ({{this.universityName}})</td>
                <td>{{this.inStateTuition}}</td>
                <td>{{this.outOfStateTuition}}</td>
                <td>
                    <!-- Update form -->
                    <form method="POST" action="/tuition/update" style="display:inline;">
                        <input type="hidden" name="costsID" value="{{this.costID}}">
                        <input type="number" step="0.01" name="inStateTuition" value="{{this.inStateTuition}}" required>
                        <input type="number" step="0.01" name="outStateTuition" value="{{this.outOfStateTuition}}" required>
                        <button type="submit">Update</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</fieldset>
<br>

<fieldset>
    <legend>Add a New Tuition Record</legend>
    <form id="add_tuition_form" method="POST" action="/tuition/add">
        <label for="costID">Cost Record:</label>
        <select id="costID" name="costID" required>
            {{#each costs}}
                <option value="{{this.costID}}">Cost Record {{this.costID}} ({{this.universityName}})</option>
            {{/each}}
        </select>

        <label for="inStateTuition">In-State Tuition:</label>
        <input type="number" step="0.01" id="inStateTuition" name="inStateTuition" min="0" required>

        <label for="outOfStateTuition">Out-of-State Tuition:</label>
        <input type="number" step="0.01" id="outOfStateTuition" name="outOfStateTuition" min="0" required>
        
        <input type="submit" value="Add Tuition Record">
    </form>
</fieldset>
