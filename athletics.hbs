<h2>Manage University Athletics</h2>

<fieldset>
    <legend>Existing Sports</legend>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Sport Name</th>
                <th>Sport Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each athletics}}
            <tr>
                <form method="POST" action="/athletics/update" style="display:inline;">
                    <input type="hidden" name="sportID" value="{{this.sportID}}">

                    <td>{{this.sportID}}</td>
                    <td>
                        <input type="text" name="sportName" value="{{this.sportName}}" required>
                    </td>
                    <td>
                        <select name="sportType" required>
                            <option value="{{this.sportType}}" selected>{{this.sportType}}</option>
                            <hr><option value="Individual">Individual</option>
                            <option value="Team">Team</option>
                        </select>
                    </td>
                    <td>
                        <button type="submit" onclick="return confirm('Are you sure you want to update this sport?')">Update</button>
                </form>

                <form method="POST" action="/athletics/remove" style="display:inline;">
                    <input type="hidden" name="sportID" value="{{this.sportID}}">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this sport?')">Delete</button>
                </form>
                    </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</fieldset>

<br>

<fieldset>
    <legend>Add a New Sport</legend>
    <form method="POST" action="/athletics/add">
        <input type="hidden" name="universityID" value="{{selectedUniversityID}}">

        <label for="sportName">Sport Name:</label>
        <input type="text" id="sportName" name="sportName" placeholder="e.g., Football (Men)" required>

        <label for="sportType">Sport Type:</label>
        <select id="sportType" name="sportType" required>
            <option value="Individual">Individual</option>
            <option value="Team">Team</option>
        </select>

        <input type="submit" value="Add Sport">
    </form>
</fieldset>
