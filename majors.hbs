<h2>Manage University Majors</h2>

<fieldset>
    <legend>Existing Majors</legend>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Program</th>
                <th>Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each majors}}
            <tr>
                <form method="POST" action="/majors/update" style="display:contents;">
                    <td>{{this.majorID}}</td>
                                        <td>
                        <input type="text" name="program" value="{{this.program}}" required>
                    </td>

                                        <td>
                        <select name="level" required>
                            <option value="{{this.level}}" selected>{{this.level}}</option>
                            <hr><option value="Undergraduate">Undergraduate</option>
                            <option value="Graduate">Graduate</option>
                            <option value="Certificate">Certificate</option>
                        </select>
                    </td>
                    
                    <td style="white-space: nowrap;">
                                                <input type="hidden" name="majorID" value="{{this.majorID}}">
                        
                        <button type="submit" onclick="return confirm('Are you sure you want to update this major?')">Update</button>
                        
                    </form>
                    
                                        <form method="POST" action="/majors/remove" style="display:inline;">
                        <input type="hidden" name="majorID" value="{{this.majorID}}">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this major?')">Delete</button>
                    </form>
                  </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</fieldset>

<br>

<fieldset>
    <legend>Add a New Major</legend>
    <form id="add_major_form" method="POST" action="/majors/add">
        
        <label for="program">Program:</label>
        <input type="text" id="program" name="program" placeholder="e.g., Computer Science" required>

        
        <label for="level">Level:</label>
        <select id="level" name="level" required>
            <option value="Undergraduate">Undergraduate</option>
            <option value="Graduate">Graduate</option>
            <option value="Certificate">Certificate</option>
        </select>
        <input type="submit" value="Add Major">
    </form>
</fieldset>