    <legend>Existing Universities</legend>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Campus Type</th>
                <th>Acceptance Rate</th>
                <th>Athletic Class</th>
                <th>Actions</th> </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Oregon State University</td>
                <td>Corvallis, OR</td>
                <td>Suburban</td>
