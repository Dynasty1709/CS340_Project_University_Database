<h2>Manage University Costs</h2>

<fieldset>
    <legend>Existing Cost Records</legend>
    <table border="1">
        <thead>
            <tr>
                <th>Cost ID</th>
                <th>University</th>
                <th>Fees</th>
                <th>Boarding</th>
                <th>Meals</th>
                <th>Books</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Oregon State University</td>
                <td>2300.00</td>
                <td>13200.00</td>
                <td>6400.00</td>
                <td>1200.00</td>
                <td><button>Edit</button> <button>Delete</button></td>
            </tr>
        </tbody>
    </table>
</fieldset>
<br>

<fieldset>
    <legend>Add a New Cost Record</legend>
    <form>
        <label>University:</label>
        <select name="universityID">
            <option value="1">Oregon State University</option>
            <option value="2">University of California, Los Angeles</option>
            <option value="3">Washington University in St. Louis</option>
        </select>

        <label>Fees:</label>
        <input type="number" step="0.01" name="fees" min="0">

        <label>Boarding:</label>
        <input type="number" step="0.01" name="boarding" min="0">

        <label>Meals:</label>
        <input type="number" step="0.01" name="meals" min="0">

        <label>Books:</label>
        <input type="number" step="0.01" name="books" min="0">
        
        <input type="submit" value="Add Cost Record">
    </form>
</fieldset>